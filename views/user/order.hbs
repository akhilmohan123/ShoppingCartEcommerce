<section>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Address</th>
          <th scope="col">Pincode</th>
          <th scope="col">Payment Method</th>
          <th scope="col">Price</th>
          <th scope="col">Status</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{this.Date}}</td>
          <td>{{this.delivarydetails.address}}</td>
          <td>{{this.delivarydetails.pincode}}</td>
          <td>{{this.paymentmethod}}</td>
          <td>{{this.totalprice}}</td>
          <td>{{this.status}}</td>
          <td>
            {{#each this.products}}
              <a href="/viewproduct/{{this.item}}" class="btn btn-success">View Product</a>
            {{/each}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
    <h3 class="float-right mr-5 mt-4">
      Total Price: RS: {{total}}
    </h3>
  </div>
</section>
